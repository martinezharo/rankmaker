---
// Footer.astro â€” Full footer with social, pages, categories, legal sections

const categories = [
    "Movies",
    "Music",
    "Sports",
    "Games",
    "TV",
    "People",
    "Internet",
    "Anime",
    "Lifestyle",
    "Food",
    "Politics",
    "History & Culture",
    "Geography",
    "Motor",
    "Books",
    "Technology",
    "Nature",
    "Others",
];
---

<footer class="border-t border-border/50 bg-surface-elevated/50 mt-auto">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-10 lg:gap-16">
            <!-- Col 1: Brand + Social -->
            <div class="col-span-2 md:col-span-1 space-y-6">
                <a href="/" class="inline-block">
                    <img
                        src="/RANKMAKER-logo.webp"
                        alt="RANKMAKER"
                        class="h-7 w-auto"
                    />
                </a>
                <p class="text-sm text-text-muted leading-relaxed">
                    The definitive platform for building accurate rankings
                    through 1v1 battles.
                </p>
                <div class="flex items-center justify-between">
                    <a
                        href="https://www.instagram.com/rankmaker_/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-9 h-9 rounded-lg bg-white/5 hover:bg-primary/20 flex items-center justify-center text-text-muted hover:text-primary transition-all"
                        aria-label="Instagram"
                    >
                        <i class="fa-brands fa-instagram"></i>
                    </a>
                    <a
                        href="https://www.tiktok.com/@rankmaker_"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-9 h-9 rounded-lg bg-white/5 hover:bg-primary/20 flex items-center justify-center text-text-muted hover:text-primary transition-all"
                        aria-label="TikTok"
                    >
                        <i class="fa-brands fa-tiktok"></i>
                    </a>
                    <a
                        href="https://x.com/RANKMAKER_"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-9 h-9 rounded-lg bg-white/5 hover:bg-primary/20 flex items-center justify-center text-text-muted hover:text-primary transition-all"
                        aria-label="X"
                    >
                        <i class="fa-brands fa-x-twitter"></i>
                    </a>
                    <a
                        href="https://www.youtube.com/channel/UCEmHgu_LtKODJuEGU0XtpvQ"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-9 h-9 rounded-lg bg-white/5 hover:bg-primary/20 flex items-center justify-center text-text-muted hover:text-primary transition-all"
                        aria-label="YouTube"
                    >
                        <i class="fa-brands fa-youtube"></i>
                    </a>
                    <a
                        href="https://www.reddit.com/user/RANKMAKERnet/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-9 h-9 rounded-lg bg-white/5 hover:bg-primary/20 flex items-center justify-center text-text-muted hover:text-primary transition-all"
                        aria-label="Reddit"
                    >
                        <i class="fa-brands fa-reddit-alien"></i>
                    </a>
                </div>
                <div class="pt-2">
                    <a
                        href="https://github.com/martinezharo/rankmaker"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex w-full items-center justify-center gap-3 px-4 py-2 rounded-xl bg-white/5 hover:bg-white/10 border border-white/10 hover:border-primary/50 transition-all group"
                    >
                        <i
                            class="fa-brands fa-github text-xl text-text-secondary group-hover:text-primary transition-colors"
                        ></i>
                        <div class="flex flex-col">
                            <span
                                class="text-[10px] uppercase tracking-widest text-text-muted font-bold"
                                >Open Source</span
                            >
                            <span
                                class="text-xs text-text-secondary group-hover:text-text-primary transition-colors"
                                >Contribute here</span
                            >
                        </div>
                    </a>
                </div>
            </div>

            <!-- Col 2: Pages -->
            <div class="space-y-4">
                <h4
                    class="text-xs font-semibold uppercase tracking-widest text-text-muted"
                >
                    Pages
                </h4>
                <ul class="space-y-2.5">
                    <li>
                        <a
                            href="/"
                            class="text-sm text-text-secondary hover:text-text-primary transition-colors"
                            >Home</a
                        >
                    </li>
                    <li>
                        <a
                            href="/search"
                            class="text-sm text-text-secondary hover:text-text-primary transition-colors"
                            >Find Templates</a
                        >
                    </li>
                </ul>

                <h4
                    class="text-xs font-semibold uppercase tracking-widest text-text-muted pt-4"
                >
                    Information
                </h4>
                <ul class="space-y-2.5">
                    <li>
                        <a
                            href="/about"
                            class="text-sm text-text-secondary hover:text-text-primary transition-colors"
                            >About Us</a
                        >
                    </li>
                    <li>
                        <a
                            href="/contact"
                            class="text-sm text-text-secondary hover:text-text-primary transition-colors"
                            >Contact</a
                        >
                    </li>
                </ul>
            </div>

            <!-- Col 3: Categories -->
            <div class="space-y-4">
                <h4
                    class="text-xs font-semibold uppercase tracking-widest text-text-muted"
                >
                    Categories
                </h4>
                <ul class="space-y-2">
                    {
                        categories.map((cat) => (
                            <li>
                                <a
                                    href={`/search?category=${encodeURIComponent(
                                        cat
                                    )}`}
                                    class="text-sm text-text-secondary hover:text-text-primary transition-colors"
                                >
                                    {cat}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Col 4: Legal -->
            <div class="space-y-4">
                <h4
                    class="text-xs font-semibold uppercase tracking-widest text-text-muted"
                >
                    Legal
                </h4>
                <ul class="space-y-2.5">
                    <li>
                        <a
                            href="/privacy-policy"
                            class="text-sm text-text-secondary hover:text-text-primary transition-colors"
                            >Privacy Policy</a
                        >
                    </li>
                    <li>
                        <a
                            href="/terms-of-use"
                            class="text-sm text-text-secondary hover:text-text-primary transition-colors"
                            >Terms of Use</a
                        >
                    </li>
                    <li>
                        <a
                            href="/cookie-policy"
                            class="text-sm text-text-secondary hover:text-text-primary transition-colors"
                            >Cookie Policy</a
                        >
                    </li>
                    <li>
                        <a
                            href="/legal-notice"
                            class="text-sm text-text-secondary hover:text-text-primary transition-colors"
                            >Legal Notice</a
                        >
                    </li>
                </ul>
            </div>
        </div>
    </div>
</footer>
